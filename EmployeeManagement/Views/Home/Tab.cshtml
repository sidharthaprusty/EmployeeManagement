@using EmployeeManagement.Models
@model MyTabs
@{
    ViewBag.Title = "Tabs";
}

<h2>Tab</h2>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<div id="tabs">

    <ul>
        @foreach (var tabitem in Model.Tabs.sections)
        {
            <li><a href="#@tabitem.name">@tabitem.name</a></li>
        }
    </ul>
    @foreach (var tabitem in Model.Tabs.sections)
    {
        <div id="@tabitem.name">
            @foreach (var buttonitem in tabitem.Widget)
            {
                <input type="button" name="@buttonitem.name" value="@buttonitem.name" class="tabbutton" /><br />
            }
        </div>
    }

</div>


@section scripts{

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#tabs").tabs();
            //bind click event to the button
            $(".tabbutton").click(function () {
                alert("Test Click"+$(this).val());
            })
        });
    </script>
}